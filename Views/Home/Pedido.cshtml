<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }

    .banner {
        width: 100%;
        height: 140px;
        background: url("https://as1.ftcdn.net/v2/jpg/11/83/61/00/1000_F_1183610030_iUhROCUzBuwVs6SkAk9um8cTY43gNUh8.jpg") center/cover;
        text-align: center;
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2;
    }

    .sidebar {
        width: 250px;
        background: #F7F7F7;
        color: #000;
        padding: 20px;
        position: fixed;
        top: 140px;
        left: 0;
        height: calc(100vh - 140px);
        overflow-y: auto;
        box-shadow: 1px 7px 58.3px -2px rgba(0, 0, 0, 0.25);
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                width: 199px;
                height: 175px;
                padding: 10px;
                margin: 10px 0;
                background: #FFF;
                text-align: center;
                box-shadow: 0px 4px 23.3px -5px rgba(0, 0, 0, 0.25);
                cursor: pointer;
                border-radius: 30px;
                transition: background 0.3s;
            }

                .sidebar ul li:hover {
                    background: #C1D343;
                }

        .sidebar img {
            width: 180px;
            height: 130px;
            object-fit: contain;
        }

    .content {
        margin-left: 270px;
        margin-top: 160px;
        padding: 20px;
        width: calc(100% - 270px);
        flex: 1;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 5px;
        width: 100%;
    }

    .menu-item {
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
        width: 77%;
        margin-left: 12%;
    }


        .menu-item:hover {
            transform: scale(1.05);
        }

        .menu-item p {
            font-size: 20px;
        }

        .menu-item h1 {
            font-size: 30px;
        }


        .menu-item img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

        /* Espaçamento extra após cada dois itens */
        .menu-item:nth-child(2n)::after {
            content: "";
            display: block;
            height: 20px; /* Espaço extra */
        }

    .footer {
        width: 100%;
        background: white;
        padding: 30px;
        text-align: center;
        box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.1);
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 2;
        font-size: 40px;
